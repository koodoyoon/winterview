<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.winterview.mapper.QuestionMapper">
    <resultMap id="questionMap" type="questionDto" autoMapping="true">
        <id property="questionIdx" column="question_idx"/>
        <result property="questionContent" column="question_content"/>
        <result property="userIdx" column="user_idx"/>
    </resultMap>
    <insert id="insert">
        INSERT INTO question (question_content, user_idx) VALUES (#{questionContent}, #{userIdx})
    </insert>
    <select id="selectRandomQuestion" resultMap="questionMap">
        SELECT * FROM Question WHERE user_idx = #{userIdx} ORDER BY RAND() LIMIT 1
    </select>
</mapper>